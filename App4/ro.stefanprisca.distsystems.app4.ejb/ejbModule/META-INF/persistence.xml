<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="books" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>ro.stefanprisca.distsystems.app4.ejb.models.Book</class>
		<class>ro.stefanprisca.distsystems.app4.ejb.models.Publisher</class>
		<properties>
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.jdbc.driver"
				value="com.microsoft.sqlserver.jdbc.SQLServerDriver" />
			<property name="eclipselink.jdbc.url"
				value="jdbc:sqlserver://localhost:9895;databaseName=ds_assign4" />
			<property name="eclipselink.jdbc.password" value="ds_2014" />
			<property name="eclipselink.jdbc.user" value="ds_2014" />

			<!-- EclipseLink should create the database schema automatically -->
			<property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
	</persistence-unit>
</persistence> 	